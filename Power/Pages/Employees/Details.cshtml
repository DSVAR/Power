@page "{id}"
@model Power.Pages.Employees.DetailsModel
@{
    ViewData["Title"] = "Employee Details";
    var PhotoPath = $"/images/{Model.Employee.PhotoPath ?? "noimage.png"}  ";
}

<div class="row justify-content-center m-3">
    <div class="col col-lg-8 ">
        <div class="card cardBoxShadow">


            <div class="card-header cardHeaderStyle text-center">
                <h1>@Model.Employee.name</h1>
            </div>

            <div class="card-body cardBoxShadow text-center">
                <div class="row">
                    <div class="col col-lg-9">
                        <h4 class="cardTextLeftFloating" >Employ ID:<span class="text-danger"> @Model.Employee.id</span></h4><hr />
                        <h4 class="cardTextLeftFloating">Employ Email: @Model.Employee.Email</h4><hr />
                        <h4 class="cardTextLeftFloating">Employ Department: @Model.Employee.Departman</h4><hr />
                    </div>
                    <div class="col col-lg-3">
                        <div style="border-right:1px solid rgba(255, 0, 0,.1)">
                            <img class="card-img-top imageThumbnail border border-primary" style="background-color:white"
                                 src="@PhotoPath"/>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <div class="card-footer text-center" style="background-color:rgb(0, 255, 144)">
                            <a asp-page="/Employees/employ" class="btn-success buttonShadow">Back</a>
                            <a asp-page="#" class="btn-primary buttonShadow">edit</a>
                            <a asp-page="#" class="btn-danger buttonShadow">delete</a>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>